<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Nimple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/NimpleToolbarStyle</item>
        <item name="colorPrimary">@color/nimpleColorPrimary</item>
        <item name="colorPrimaryDark">@color/nimpleColorPrimaryDark</item>
        <item name="colorAccent">@color/nimpleColorAccent</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Nimple.Main" parent="Theme.Nimple">
        <item name="actionBarStyle">@style/NimpleToolbarStyleMain</item>
    </style>

    <style name="NimpleToolbarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="theme">@style/NimpleToolbarTextStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="NimpleToolbarStyleMain" parent="NimpleToolbarStyle">
        <item name="elevation">0dp</item>
    </style>

    <style name="NimpleToolbarTextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="NimpleTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/NimpleTabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="elevation">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="NimpleTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nimple_text_light_desaturated</item>
    </style>

    <style name="NimpleTextDefault" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/nimpleTextColor</item>
    </style>

    <style name="NimpleTextHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/nimpleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NimpleTextAnnotation" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/nimpleTextAnnotationColor</item>
    </style>

</resources>