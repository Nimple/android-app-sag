<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Nimple" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/NimpleToolbarStyle</item>
        <item name="colorPrimary">#0899cc</item>
        <item name="colorPrimaryDark">#005d8c</item>
        <item name="colorAccent">#ffa200</item>
    </style>

    <style name="Theme.Nimple.Main" parent="Theme.Nimple">
        <item name="actionBarStyle">@style/NimpleToolbarStyleMain</item>
    </style>

    <style name="NimpleToolbarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="theme">@style/NimpleToolbarTextStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="NimpleToolbarStyleMain" parent="NimpleToolbarStyle">
        <item name="elevation">0dp</item>
    </style>

    <style name="NimpleToolbarTextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="NimpleTextDefault" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/nimple_text_color</item>
    </style>

    <style name="NimpleTextHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/nimple_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NimpleTextAnnotation" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#a0a0a0</item>
    </style>

</resources>